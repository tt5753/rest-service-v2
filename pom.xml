<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.rest</groupId>
    <artifactId>rest-service</artifactId>
    <packaging>pom</packaging>
    <version>1.1.0</version>
    <modules>
        <module>rest-resteasy-netty4</module>
        <module>rest-security</module>
        <module>rest-service-codec</module>
        <module>rest-service-utils</module>
        <module>rest-security-simple</module>
        <module>rest-service-demo</module>
        <module>rest-service-main</module>
    </modules>
    <properties>
        <project.rest.version>1.1.0</project.rest.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
        <org.springframework.version>4.2.4.RELEASE</org.springframework.version>

        <resteasy.version>3.0.19.Final</resteasy.version>
        <netty.version>4.1.6.Final</netty.version>
        <mockito.version>1.9.5</mockito.version>
        <org.aspectj-version>1.8.8</org.aspectj-version>
        <org.slf4j.version>1.7.15</org.slf4j.version>

        <org.log4j2.version>2.5</org.log4j2.version>
        <javassist.version>3.20.0-GA</javassist.version>

        <shiro.version>1.2.4</shiro.version>
        <commons-lang3.version>3.4</commons-lang3.version>
        <guava.version>18.0</guava.version>
        <orika.version>1.4.6</orika.version>
        <commons-codec.version>1.10</commons-codec.version>
        <jackson.version>2.6.4</jackson.version>

        <druid.version>1.0.16</druid.version>
        <jsonwebtoken.version>0.6.0</jsonwebtoken.version>

        <dubbo.version>2.8.5</dubbo.version>
        <zookeeper.version>3.4.8</zookeeper.version>
        <zkclient.version>0.7</zkclient.version>
        <java.core.version>2.0.0</java.core.version>
        <build.jvmArguments>-Xms1024m -Xmx2048m</build.jvmArguments>
        <build.main.class>com.rest.service.main.Main</build.main.class>
        <proguard.version>2.0.13</proguard.version>
    </properties>

    <!-- 配置默认中央仓库 -->
    <repositories>
        <repository>
            <id>central</id>
            <name>Central</name>
            <url>http://10.250.117.5:8081/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
